<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/m"
    tools:context=".MainActivity"
    android:gravity="center">
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="3"
        android:columnCount="2">

        <Button
            android:id="@+id/btnWaktu"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:text="Waktu Solat"
            android:textColor="#000000"
            android:background="@drawable/solat"
            android:textSize="30sp"
            tools:ignore="hardcode" />

        <Button
            android:id="@+id/btnjadual"
            android:text="Jadual Kuliah"
            android:layout_height="68dp"
            android:layout_width="68dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:background="@drawable/j"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            tools:ignore="hardcode" />
        <Button
            android:id="@+id/btnpenting"
            android:text="Tarikh Penting"
            android:layout_height="68dp"
            android:layout_width="68dp"
            android:textSize="30sp"
            android:textColor="#000000"
            android:layout_gravity="fill"
            android:background="@drawable/t"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            tools:ignore="hardcode" />
        <Button
            android:id="@+id/btnsumbangan"
            android:text="Sumbangan"
            android:layout_height="68dp"
            android:layout_width="68dp"
            android:textSize="30sp"
            android:background="@drawable/s"
            android:textColor="#000000"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            tools:ignore="hardcode" />
        <Button
            android:id="@+id/btnjemaah"
            android:text="Senarai Jemaah"
            android:textSize="10sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_margin="5sp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            tools:ignore="hardcode" />
        <Button
            android:id="@+id/btnMaklumat"
            android:text="Maklumat "
            android:textSize="10sp"
            android:background="#ffffff"
            android:textColor="#000000"
            android:layout_margin="5sp"
            android:layout_gravity="fill"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            tools:ignore="hardcode" />


    </GridLayout>




</androidx.constraintlayout.widget.ConstraintLayout>